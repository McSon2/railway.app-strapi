{
  "kind": "collectionType",
  "collectionName": "providers",
  "info": {
    "singularName": "provider",
    "pluralName": "providers",
    "displayName": "Provider",
    "description": "Slot game providers/fournisseurs pages"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": { "i18n": { "localized": true } },
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "title", "required": true },
    "excerpt": { "type": "text" },
    "content": { "type": "blocks" },
    "featuredImage": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "providerLogo": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false
    }
  }
}
